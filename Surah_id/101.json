[{"id":6158,"surah":101,"no_ayah":1,"theme":"","text_id":"Al-Qāri‘ah (hari Kiamat yang menggetarkan).","text_en":"THE STARTLING CALAMITY.","transliteration":"al-qāri'ah","no_fn":"","text_fn":""},{"id":6159,"surah":101,"no_ayah":2,"theme":"","text_id":"Apakah al-Qāri‘ah itu?","text_en":"What is the startling calamity?","transliteration":"mal-qāri'ah","no_fn":"","text_fn":""},{"id":6160,"surah":101,"no_ayah":3,"theme":"","text_id":"Tahukah kamu apakah al-Qāri‘ah itu?","text_en":"How will you comprehend what the startling calamity is? --","transliteration":"wa mā adrāka mal-qāri'ah","no_fn":"","text_fn":""},{"id":6161,"surah":101,"no_ayah":4,"theme":"","text_id":"Pada hari itu manusia seperti laron yang beterbangan","text_en":"A Day on which human beings would be like so many scattered moths,","transliteration":"yauma yakụnun-nāsu kal-farāsyil-mabṡụṡ","no_fn":"","text_fn":""},{"id":6162,"surah":101,"no_ayah":5,"theme":"","text_id":"dan gunung-gunung seperti bulu yang berhamburan.","text_en":"The mountains like the tufts of carded wool.","transliteration":"wa takụnul-jibālu kal-'ihnil-manfụsy","no_fn":"","text_fn":""},{"id":6163,"surah":101,"no_ayah":6,"theme":"","text_id":"Siapa yang berat timbangan (kebaikan)-nya,","text_en":"Then he whose deeds shall weigh heavier in the scale","transliteration":"fa ammā man ṡaqulat mawāzīnuh","no_fn":"","text_fn":""},{"id":6164,"surah":101,"no_ayah":7,"theme":"","text_id":"dia berada dalam kehidupan yang menyenangkan.","text_en":"Will have a tranquil life;","transliteration":"fa huwa fī 'īsyatir rāḍiyah","no_fn":"","text_fn":""},{"id":6165,"surah":101,"no_ayah":8,"theme":"","text_id":"Adapun orang yang ringan timbangan (kebaikan)-nya,","text_en":"But he whose deeds are lighter in the balance","transliteration":"wa ammā man khaffat mawāzīnuh","no_fn":"","text_fn":""},{"id":6166,"surah":101,"no_ayah":9,"theme":"","text_id":"tempat kembalinya adalah (neraka) Hawiyah.","text_en":"Will have the Abyss for abode.","transliteration":"fa ummuhụ hāwiyah","no_fn":"","text_fn":""},{"id":6167,"surah":101,"no_ayah":10,"theme":"","text_id":"Tahukah kamu apakah (neraka Hawiyah) itu?","text_en":"How will you comprehend what that is?","transliteration":"wa mā adrāka mā hiyah","no_fn":"","text_fn":""},{"id":6168,"surah":101,"no_ayah":11,"theme":"","text_id":"(Ia adalah) api yang sangat panas.","text_en":"It is the scorching fire.","transliteration":"nārun ḥāmiyah","no_fn":"","text_fn":""}]