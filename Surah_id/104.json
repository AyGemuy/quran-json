[{"id":6180,"surah":104,"no_ayah":1,"theme":"","text_id":"Celakalah setiap pengumpat lagi pencela","text_en":"WOE TO EVERY slanderer, back-biter,","transliteration":"wailul likulli humazatil lumazah","no_fn":"","text_fn":""},{"id":6181,"surah":104,"no_ayah":2,"theme":"","text_id":"yang mengumpulkan harta dan menghitung-hitungnya.","text_en":"Who amasses wealth and hordes it.","transliteration":"allażī jama'a mālaw wa 'addadah","no_fn":"","text_fn":""},{"id":6182,"surah":104,"no_ayah":3,"theme":"","text_id":"Dia (manusia) mengira bahwa hartanya dapat mengekalkannya.","text_en":"Does he think his wealth will abide for ever with him?","transliteration":"yaḥsabu anna mālahū akhladah","no_fn":"","text_fn":""},{"id":6183,"surah":104,"no_ayah":4,"theme":"","text_id":"Sekali-kali tidak! Pasti dia akan dilemparkan ke dalam (neraka) Hutamah.","text_en":"By no means. He will be thrown into Hutama.","transliteration":"kallā layumbażanna fil-ḥuṭamah","no_fn":"","text_fn":""},{"id":6184,"surah":104,"no_ayah":5,"theme":"","text_id":"Tahukah kamu apakah (neraka) Hutamah?","text_en":"How will you comprehend what Hutama is?","transliteration":"wa mā adrāka mal-ḥuṭamah","no_fn":"","text_fn":""},{"id":6185,"surah":104,"no_ayah":6,"theme":"","text_id":"(Ia adalah) api (azab) Allah yang dinyalakan","text_en":"It is the fire kindled by God","transliteration":"nārullāhil-mụqadah","no_fn":"","text_fn":""},{"id":6186,"surah":104,"no_ayah":7,"theme":"","text_id":"yang (membakar) naik sampai ke hati.","text_en":"Which penetrates the hearts","transliteration":"allatī taṭṭali'u 'alal-af`idah","no_fn":"","text_fn":""},{"id":6187,"surah":104,"no_ayah":8,"theme":"","text_id":"Sesungguhnya dia (api itu) tertutup rapat (sebagai hukuman) atas mereka,","text_en":"(And) vaults them over","transliteration":"innahā 'alaihim mu`ṣadah","no_fn":"","text_fn":""},{"id":6188,"surah":104,"no_ayah":9,"theme":"","text_id":"(sedangkan mereka) diikat pada tiang-tiang yang panjang.","text_en":"In extending columns.","transliteration":"fī 'amadim mumaddadah","no_fn":"","text_fn":""}]