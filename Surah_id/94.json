[{"id":6091,"surah":94,"no_ayah":1,"theme":"","text_id":"Bukankah Kami telah melapangkan dadamu (Nabi Muhammad),","text_en":"HAVE WE NOT opened up your breast","transliteration":"a lam nasyraḥ laka ṣadrak","no_fn":"","text_fn":""},{"id":6092,"surah":94,"no_ayah":2,"theme":"","text_id":"meringankan beban (tugas-tugas kenabian) darimu","text_en":"And removed your burden","transliteration":"wa waḍa'nā 'angka wizrak","no_fn":"","text_fn":""},{"id":6093,"surah":94,"no_ayah":3,"theme":"","text_id":"yang memberatkan punggungmu,","text_en":"Which had left you devoid of hope,","transliteration":"allażī angqaḍa ẓahrak","no_fn":"","text_fn":""},{"id":6094,"surah":94,"no_ayah":4,"theme":"","text_id":"dan meninggikan (derajat)-mu (dengan selalu) menyebut-nyebut (nama)-mu?","text_en":"And exalted your fame?","transliteration":"wa rafa'nā laka żikrak","no_fn":"","text_fn":""},{"id":6095,"surah":94,"no_ayah":5,"theme":"","text_id":"Maka, sesungguhnya beserta kesulitan ada kemudahan.","text_en":"Surely with hardship there is ease.","transliteration":"fa inna ma'al-'usri yusrā","no_fn":"","text_fn":""},{"id":6096,"surah":94,"no_ayah":6,"theme":"","text_id":"Sesungguhnya beserta kesulitan ada kemudahan.","text_en":"With hardship indeed there is ease.","transliteration":"inna ma'al-'usri yusrā","no_fn":"","text_fn":""},{"id":6097,"surah":94,"no_ayah":7,"theme":"","text_id":"Apabila engkau telah selesai (dengan suatu kebajikan), teruslah bekerja keras (untuk kebajikan yang lain)","text_en":"So when you are free work diligently,","transliteration":"fa iżā faragta fanṣab","no_fn":"","text_fn":""},{"id":6098,"surah":94,"no_ayah":8,"theme":"","text_id":"dan hanya kepada Tuhanmu berharaplah!","text_en":"And turn to your Lord with all your love.","transliteration":"wa ilā rabbika fargab","no_fn":"","text_fn":""}]