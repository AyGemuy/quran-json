[{"id":6044,"surah":91,"no_ayah":1,"tema":"","text_ayah":"\u0648\u064e[h:9999[\u0671][l[\u0644]\u0634\u0651\u064e\u0645\u0652\u0633\u0650 \u0648\u064e\u0636\u064f\u062d\u064e[n[\u0640\u0670]\u0647\u064e\u0627","text_id":"Demi matahari dan sinarnya pada waktu duha (ketika matahari naik sepenggalah),","text_en":"I CALL TO witness the sun and his early morning splendour,","transliteration":"Wash shamsi wa duhaa haa","no_fn":"","text_fn":""},{"id":6045,"surah":91,"no_ayah":2,"tema":"","text_ayah":"\u0648\u064e[h:9999[\u0671]\u0644\u0652\u0642\u064e\u0645\u064e\u0631\u0650 \u0625\u0650\u0630\u064e\u0627 \u062a\u064e\u0644\u064e[n[\u0640\u0670]\u0647\u064e\u0627","text_id":"demi bulan saat mengiringinya,","text_en":"And the moon as she follows in his wake,","transliteration":"Wal qamari izaa talaa haa","no_fn":"","text_fn":""},{"id":6046,"surah":91,"no_ayah":3,"tema":"","text_ayah":"\u0648\u064e[h:9999[\u0671][l[\u0644][g[\u0646\u0651]\u064e\u0647\u064e\u0627\u0631\u0650 \u0625\u0650\u0630\u064e\u0627 \u062c\u064e\u0644\u0651\u064e[n[\u0640\u0670]\u0647\u064e\u0627","text_id":"demi siang saat menampakkannya,","text_en":"The day when it reveals his radiance,","transliteration":"Wannahaari izaa jallaa haa","no_fn":"","text_fn":""},{"id":6047,"surah":91,"no_ayah":4,"tema":"","text_ayah":"\u0648\u064e[h:9999[\u0671]\u0644\u0651\u064e\u064a\u0652\u0644\u0650 \u0625\u0650\u0630\u064e\u0627 \u064a\u064e\u063a\u0652\u0634\u064e[n[\u0640\u0670]\u0647\u064e\u0627","text_id":"demi malam saat menutupinya (gelap gulita),","text_en":"The night when it covers him over,","transliteration":"Wallaili izaa yaghshaa haa","no_fn":"","text_fn":""},{"id":6048,"surah":91,"no_ayah":5,"tema":"","text_ayah":"\u0648\u064e[h:9999[\u0671][l[\u0644]\u0633\u0651\u064e\u0645[o[\u064e\u0627]\u0653\u0621\u0650 \u0648\u064e\u0645\u064e\u0627 \u0628\u064e\u0646\u064e[n[\u0640\u0670]\u0647\u064e\u0627","text_id":"demi langit serta pembuatannya,","text_en":"The heavens and its architecture,","transliteration":"Wassamaaa'i wa maa banaahaa","no_fn":"","text_fn":""},{"id":6049,"surah":91,"no_ayah":6,"tema":"","text_ayah":"\u0648\u064e[h:9999[\u0671]\u0644\u0652\u0623\u064e\u0631\u0652\u0636\u0650 \u0648\u064e\u0645\u064e\u0627 \u0637\u064e\u062d\u064e[n[\u0640\u0670]\u0647\u064e\u0627","text_id":"demi bumi serta penghamparannya,","text_en":"The earth and its spreading out,","transliteration":"Wal ardi wa maa tahaahaa","no_fn":"","text_fn":""},{"id":6050,"surah":91,"no_ayah":7,"tema":"","text_ayah":"\u0648\u064e\u0646\u064e\u0641\u0652[a:14521[\u0633\u064d \u0648]\u064e\u0645\u064e\u0627 \u0633\u064e\u0648\u0651\u064e[n[\u066e\u0670]\u0647\u064e\u0627","text_id":"dan demi jiwa serta penyempurnaan (ciptaan)-nya,","text_en":"The soul and how it was integrated","transliteration":"Wa nafsinw wa maa sawwaahaa","no_fn":"","text_fn":""},{"id":6051,"surah":91,"no_ayah":8,"tema":"","text_ayah":"\u0641\u064e\u0623\u064e\u0644\u0652\u0647\u064e\u0645\u064e\u0647\u064e\u0627 \u0641\u064f\u062c\u064f\u0648\u0631\u064e\u0647\u064e\u0627 \u0648\u064e\u062a\u064e[q:14522[\u0642\u0652]\u0648\u064e[n[\u066e\u0670]\u0647\u064e\u0627","text_id":"lalu Dia mengilhamkan kepadanya (jalan) kejahatan dan ketakwaannya,","text_en":"And given the faculty of knowing what is disruptive and what is intrinsic to it.","transliteration":"Fa-alhamahaa fujoorahaa wa taqwaahaa","no_fn":"","text_fn":""},{"id":6052,"surah":91,"no_ayah":9,"tema":"","text_ayah":"\u0642\u064e[q:298[\u062f\u0652] \u0623\u064e\u0641\u0652\u0644\u064e\u062d\u064e \u0645\u064e[f:14523[\u0646 \u0632]\u064e\u0643\u0651\u064e[n[\u0640\u0670]\u0647\u064e\u0627","text_id":"sungguh beruntung orang yang menyucikannya (jiwa itu)","text_en":"He who nourishes it will surely be successful,","transliteration":"Qad aflaha man zakkaahaa","no_fn":"","text_fn":""},{"id":6053,"surah":91,"no_ayah":10,"tema":"","text_ayah":"\u0648\u064e\u0642\u064e[q:387[\u062f\u0652] \u062e\u064e\u0627\u0628\u064e \u0645\u064e[f:14524[\u0646 \u062f]\u064e\u0633\u0651\u064e[n[\u0640\u0670]\u0647\u064e\u0627","text_id":"dan sungguh rugi orang yang mengotorinya.","text_en":"And he who confines it will surely come to grief.","transliteration":"Wa qad khaaba man dassaahaa","no_fn":"","text_fn":""},{"id":6054,"surah":91,"no_ayah":11,"tema":"Kisah Kaum Samud","text_ayah":"\u0643\u064e\u0630\u0651\u064e\u0628\u064e\u062a\u0652 \u062b\u064e\u0645\u064f\u0648\u062f\u064f \u0628\u0650\u0637\u064e\u063a\u0652\u0648\u064e[n[\u066e\u0670]\u0647\u064e\u0627\u0653","text_id":"(Kaum) Samud telah mendustakan (rasulnya) karena mereka melampaui batas ","text_en":"The Thamud denied (the truth) in their perverseness","transliteration":"Kazzabat Samoodu bi taghwaahaaa","no_fn":"","text_fn":""},{"id":6055,"surah":91,"no_ayah":12,"tema":"Kisah Kaum Samud","text_ayah":"\u0625\u0650\u0630\u0650 [h:14525[\u0671][i:14526[\u0646\u06e2\u0628]\u064e\u0639\u064e\u062b\u064e \u0623\u064e\u0634\u0652\u0642\u064e[n[\u0640\u0670]\u0647\u064e\u0627","text_id":"ketika orang yang paling celaka di antara mereka bangkit (untuk menyembelih unta betina Allah).","text_en":"When among them the great wretch arose,","transliteration":"Izim ba'asa ashqaahaa","no_fn":"","text_fn":""},{"id":6056,"surah":91,"no_ayah":13,"tema":"Kisah Kaum Samud","text_ayah":"\u0641\u064e\u0642\u064e\u0627\u0644\u064e \u0644\u064e\u0647\u064f\u0645\u0652 \u0631\u064e\u0633\u064f\u0648\u0644\u064f [h:3306[\u0671]\u0644\u0644\u0651\u064e\u0647\u0650 \u0646\u064e\u0627\u0642\u064e\u0629\u064e [h:14527[\u0671]\u0644\u0644\u0651\u064e\u0647\u0650 \u0648\u064e\u0633\u064f[q:14528[\u0642\u0652]\u064a\u064e[n[\u0640\u0670]\u0647\u064e\u0627","text_id":"Rasul Allah (Saleh) lalu berkata kepada mereka, “(Biarkanlah) unta betina Allah ini beserta minumannya.”","text_en":"And the apostle of God had to tell them: \"This is God's she-camel, let her drink.\"","transliteration":"Faqaala lahum Rasoolul laahi naaqatal laahi wa suqiyaahaa","no_fn":"","text_fn":""},{"id":6057,"surah":91,"no_ayah":14,"tema":"Kisah Kaum Samud","text_ayah":"\u0641\u064e\u0643\u064e\u0630\u0651\u064e\u0628\u064f\u0648\u0647\u064f \u0641\u064e\u0639\u064e\u0642\u064e\u0631\u064f\u0648\u0647\u064e\u0627 \u0641\u064e\u062f\u064e\u0645\u0652\u062f\u064e\u0645\u064e \u0639\u064e\u0644\u064e\u064a\u0652\u0647\u0650\u0645\u0652 \u0631\u064e\u0628\u0651\u064f\u0647[c:14529[\u064f\u0645 \u0628]\u0650\u0630\u064e[i:13779[\u0646\u06e2\u0628]\u0650\u0647\u0650\u0645\u0652 \u0641\u064e\u0633\u064e\u0648\u0651\u064e[n[\u066e\u0670]\u0647\u064e\u0627","text_id":"Namun, mereka kemudian mendustakannya (Saleh) dan menyembelih (unta betina) itu. Maka, Tuhan membinasakan mereka karena dosa-dosanya, lalu meratakan mereka (dengan tanah).","text_en":"But they called him a liar and hamstrung her. So God obliterated them for their crime, and (destroyed) all of them alike.","transliteration":"Fakazzaboohu fa'aqaroohaa fadamdama 'alaihim Rabbuhum bizambihim fasaw waahaa","no_fn":"","text_fn":""},{"id":6058,"surah":91,"no_ayah":15,"tema":"Kisah Kaum Samud","text_ayah":"\u0648\u064e\u0644\u064e\u0627 \u064a\u064e\u062e\u064e\u0627\u0641\u064f \u0639\u064f[q:14530[\u0642\u0652]\u0628\u064e[n[\u0640\u0670]\u0647\u064e\u0627","text_id":"Dia tidak takut terhadap akibatnya.","text_en":"He does not fear the consequence.","transliteration":"Wa laa yakhaafu'uqbaahaa","no_fn":"","text_fn":""}]