[{"id":6169,"surah":102,"no_ayah":1,"tema":"","text_ayah":"\u0623\u064e\u0644\u0652\u0647\u064e[n[\u0640\u0670]\u0643\u064f\u0645\u064f [h:14627[\u0671][l[\u0644]\u062a\u0651\u064e\u0643\u064e\u0627\u062b\u064f\u0631\u064f","text_id":"Berbangga-bangga dalam memperbanyak (dunia) telah melalaikanmu<sup>760)</sup>","text_en":"THE AVARICE OF plenitude keeps you occupied","transliteration":"Al haaku mut takathur","no_fn":"760","text_fn":"760) Maksudnya adalah bersaing memperbanyak anak, harta, pengikut, kemuliaan, dan sebagainya telah melalaikan manusia dari ketaatan kepada Allah Swt."},{"id":6170,"surah":102,"no_ayah":2,"tema":"","text_ayah":"\u062d\u064e\u062a\u0651\u064e\u064A\u0652\u0670 \u0632\u064f\u0631\u0652\u062a\u064f\u0645\u064f [h:14628[\u0671]\u0644\u0652\u0645\u064e\u0642\u064e\u0627\u0628\u0650\u0631\u064e","text_id":"sampai kamu masuk ke dalam kubur.","text_en":"Till you reach the grave.","transliteration":"Hatta zurtumul-maqaabir","no_fn":"","text_fn":""},{"id":6171,"surah":102,"no_ayah":3,"tema":"","text_ayah":"\u0643\u064e\u0644\u0651\u064e\u0627 \u0633\u064e\u0648\u0652\u0641\u064e \u062a\u064e\u0639\u0652\u0644\u064e\u0645[p[\u064f\u0648]\u0646\u064e","text_id":"Sekali-kali tidak! Kelak kamu akan mengetahui (akibat perbuatanmu itu).","text_en":"But you will come to know soon; --","transliteration":"Kalla sawfa ta'lamoon","no_fn":"","text_fn":""},{"id":6172,"surah":102,"no_ayah":4,"tema":"","text_ayah":"\u062b\u064f[g[\u0645\u0651]\u064e \u0643\u064e\u0644\u0651\u064e\u0627 \u0633\u064e\u0648\u0652\u0641\u064e \u062a\u064e\u0639\u0652\u0644\u064e\u0645[p[\u064f\u0648]\u0646\u064e","text_id":"Sekali-kali tidak (jangan melakukan itu)! Kelak kamu akan mengetahui (akibatnya).","text_en":"Indeed you will come to know soon.","transliteration":"Thumma kalla sawfa ta'lamoon","no_fn":"","text_fn":""},{"id":6173,"surah":102,"no_ayah":5,"tema":"","text_ayah":"\u0643\u064e\u0644\u0651\u064e\u0627 \u0644\u064e\u0648\u0652 \u062a\u064e\u0639\u0652\u0644\u064e\u0645\u064f\u0648\u0646\u064e \u0639\u0650\u0644\u0652\u0645\u064e [h:14629[\u0671]\u0644\u0652\u064a\u064e\u0642[p[\u0650\u064a]\u0646\u0650","text_id":"Sekali-kali tidak (jangan melakukan itu)! Sekiranya kamu mengetahui dengan pasti, (niscaya kamu tidak akan melakukannya).","text_en":"And yet if you knew with positive knowledge","transliteration":"Kalla law ta'lamoona 'ilmal yaqeen","no_fn":"","text_fn":""},{"id":6174,"surah":102,"no_ayah":6,"tema":"","text_ayah":"\u0644\u064e\u062a\u064e\u0631\u064e\u0648\u064f[g[\u0646\u0651]\u064e [h:14630[\u0671]\u0644\u0652\u062c\u064e\u062d[p[\u0650\u064a]\u0645\u064e","text_id":"Pasti kamu benar-benar akan melihat (neraka) Jahim.","text_en":"You have indeed to behold Hell;","transliteration":"Latara-wun nal jaheem","no_fn":"","text_fn":""},{"id":6175,"surah":102,"no_ayah":7,"tema":"","text_ayah":"\u062b\u064f[g[\u0645\u0651]\u064e \u0644\u064e\u062a\u064e\u0631\u064e\u0648\u064f[g[\u0646\u0651]\u064e\u0647\u064e\u0627 \u0639\u064e\u064a\u0652\u0646\u064e [h:14631[\u0671]\u0644\u0652\u064a\u064e\u0642[p[\u0650\u064a]\u0646\u0650","text_id":"Kemudian, kamu pasti benar-benar akan melihatnya dengan ainulyakin.","text_en":"Then you will see it with the eye of certainty.","transliteration":"Thumma latara wunnaha 'ainal yaqeen","no_fn":"","text_fn":""},{"id":6176,"surah":102,"no_ayah":8,"tema":"","text_ayah":"\u062b\u064f[g[\u0645\u0651]\u064e \u0644\u064e\u062a\u064f\u0633\u0652\u0640\u0640\u0654\u064e\u0644\u064f[g[\u0646\u0651]\u064e \u064a\u064e\u0648\u0652\u0645\u064e\u0626\u0650\u0630\u064d \u0639\u064e\u0646\u0650 [h:14632[\u0671][l[\u0644][g[\u0646\u0651]\u064e\u0639[p[\u0650\u064a]\u0645\u0650","text_id":"Kemudian, kamu pasti benar-benar akan ditanya pada hari itu tentang kenikmatan (yang megah di dunia itu).","text_en":"Then on that day you will surely be asked about the verity of pleasures.","transliteration":"Thumma latus alunna yauma-izin 'anin na'eem","no_fn":"","text_fn":""}]