[{"id":5949,"surah":87,"no_ayah":1,"tema":"","text_ayah":"\u0633\u064e\u0628\u0651\u0650\u062d\u0650 [h:14437[\u0671]\u0633\u0652\u0645\u064e \u0631\u064e\u0628\u0651\u0650\u0643\u064e [h:14438[\u0671]\u0644\u0652\u0623\u064e\u0639\u0652\u0644\u064e\u0649","text_id":"Sucikanlah nama Tuhanmu Yang Mahatinggi,","text_en":"GLORIFY THE NAME of your Lord, most high,","transliteration":"Sabbihisma Rabbikal A'laa","no_fn":"","text_fn":""},{"id":5950,"surah":87,"no_ayah":2,"tema":"","text_ayah":"\u0671\u0644\u0651\u064e\u0630\u0650\u0649 \u062e\u064e\u0644\u064e\u0642\u064e \u0641\u064e\u0633\u064e\u0648\u0651\u064e\u0649\u0670","text_id":"yang menciptakan, lalu menyempurnakan (ciptaan-Nya),","text_en":"Who creates and proportions,","transliteration":"Allazee khalaqa fasawwaa","no_fn":"","text_fn":""},{"id":5951,"surah":87,"no_ayah":3,"tema":"","text_ayah":"\u0648\u064e[h:9999[\u0671]\u0644\u0651\u064e\u0630\u0650\u0649 \u0642\u064e\u062f\u0651\u064e\u0631\u064e \u0641\u064e\u0647\u064e\u062f\u064e\u0649\u0670","text_id":"yang menentukan kadar (masing-masing) dan memberi petunjuk,","text_en":"Who determines and directs,","transliteration":"Wallazee qaddara fahadaa","no_fn":"","text_fn":""},{"id":5952,"surah":87,"no_ayah":4,"tema":"","text_ayah":"\u0648\u064e[h:9999[\u0671]\u0644\u0651\u064e\u0630[o[\u0650\u0649\u0653] \u0623\u064e\u062e\u0652\u0631\u064e\u062c\u064e [h:14439[\u0671]\u0644\u0652\u0645\u064e\u0631\u0652\u0639\u064e\u0649\u0670","text_id":"dan yang menumbuhkan (rerumputan) padang gembala,","text_en":"Who brings out the pastures","transliteration":"Wallazeee akhrajal mar'aa","no_fn":"","text_fn":""},{"id":5953,"surah":87,"no_ayah":5,"tema":"","text_ayah":"\u0641\u064e\u062c\u064e\u0639\u064e\u0644\u064e\u0647\u064f[n[\u06e5] \u063a\u064f\u062b[o[\u064e\u0627]\u0653\u0621\u064b \u0623\u064e\u062d\u0652\u0648\u064e\u0649\u0670","text_id":"lalu menjadikannya kering kehitam-hitaman.","text_en":"Then reduces them to rusty rubbish.","transliteration":"Faja'alahoo ghusaaa'an ahwaa","no_fn":"","text_fn":""},{"id":5954,"surah":87,"no_ayah":6,"tema":"","text_ayah":"\u0633\u064e\u0646\u064f[q:14440[\u0642\u0652]\u0631\u0650\u0626\u064f\u0643\u064e \u0641\u064e\u0644\u064e\u0627 \u062a\u064e[f:14441[\u0646\u0633]\u064e\u0649\u0670\u0653","text_id":"Kami akan membacakan (Al-Qurâ€™an) kepadamu (Nabi Muhammad) sehingga engkau tidak akan lupa,","text_en":"We shall make you recite (the Qur'an) so that you will not forget it,","transliteration":"Sanuqri'uka falaa tansaaa","no_fn":"","text_fn":""},{"id":5955,"surah":87,"no_ayah":7,"tema":"","text_ayah":"\u0625\u0650\u0644\u0651\u064e\u0627 \u0645\u064e\u0627 \u0634[o[\u064e\u0627]\u0653\u0621\u064e [h:78[\u0671]\u0644\u0644\u0651\u064e\u0647\u064f\u200c\u06da \u0625\u0650[g[\u0646\u0651]\u064e\u0647\u064f[n[\u06e5] \u064a\u064e\u0639\u0652\u0644\u064e\u0645\u064f [h:8891[\u0671]\u0644\u0652\u062c\u064e\u0647\u0652\u0631\u064e \u0648\u064e\u0645\u064e\u0627 \u064a\u064e\u062e\u0652\u0641\u064e\u0649\u0670","text_id":"kecuali jika Allah menghendaki. Sesungguhnya Dia mengetahui yang terang dan yang tersembunyi.","text_en":"Unless God may please. He knows the visible and knows what is hidden.","transliteration":"Illaa maa shaaa'al laah; innahoo ya'lamul jahra wa maa yakhfaa","no_fn":"","text_fn":""},{"id":5956,"surah":87,"no_ayah":8,"tema":"","text_ayah":"\u0648\u064e\u0646\u064f\u064a\u064e\u0633\u0651\u0650\u0631\u064f\u0643\u064e \u0644\u0650\u0644\u0652\u064a\u064f\u0633\u0652\u0631\u064e\u0649\u0670","text_id":"Kami akan melapangkan bagimu jalan kemudahan (dalam segala urusan).","text_en":"We shall take you slowly towards ease.","transliteration":"Wa nu-yassiruka lilyusraa","no_fn":"","text_fn":""},{"id":5957,"surah":87,"no_ayah":9,"tema":"","text_ayah":"\u0641\u064e\u0630\u064e\u0643\u0651\u0650\u0631\u0652 \u0625[a:14442[\u0650\u0646 \u0646]\u0651\u064e\u0641\u064e\u0639\u064e\u062a\u0650 [h:14443[\u0671][l[\u0644]\u0630\u0651\u0650\u0643\u0652\u0631\u064e\u0649\u0670","text_id":"Maka, sampaikanlah peringatan jika peringatan itu bermanfaat.","text_en":"So remind them if reminder is profitable:","transliteration":"Fazakkir in nafa'atizzikraa","no_fn":"","text_fn":""},{"id":5958,"surah":87,"no_ayah":10,"tema":"","text_ayah":"\u0633\u064e\u064a\u064e\u0630\u0651\u064e\u0643\u0651\u064e\u0631\u064f \u0645[a:14444[\u064e\u0646 \u064a]\u064e\u062e\u0652\u0634\u064e\u0649\u0670","text_id":"Orang yang takut (kepada Allah) akan mengambil pelajaran,","text_en":"Those who fear will understand.","transliteration":"Sa yazzakkaru maiyakhshaa","no_fn":"","text_fn":""},{"id":5959,"surah":87,"no_ayah":11,"tema":"","text_ayah":"\u0648\u064e\u064a\u064e\u062a\u064e\u062c\u064e[g[\u0646\u0651]\u064e\u0628\u064f\u0647\u064e\u0627 [h:14445[\u0671]\u0644\u0652\u0623\u064e\u0634\u0652\u0642\u064e\u0649","text_id":"sedangkan orang-orang yang celaka (kafir) akan menjauhinya,","text_en":"Only the wretch will turn aside,","transliteration":"Wa yatajannabuhal ashqaa","no_fn":"","text_fn":""},{"id":5960,"surah":87,"no_ayah":12,"tema":"","text_ayah":"\u0671\u0644\u0651\u064e\u0630\u0650\u0649 \u064a\u064e\u0635\u0652\u0644\u064e\u0649 [h:14446[\u0671][l[\u0644][g[\u0646\u0651]\u064e\u0627\u0631\u064e [h:14447[\u0671]\u0644\u0652\u0643\u064f[q:8463[\u0628\u0652]\u0631\u064e\u0649\u0670","text_id":"(yaitu) orang yang akan memasuki api (neraka) yang besar.","text_en":"Who will burn in the terrible Fire,","transliteration":"Allazee yaslan Naaral kubraa","no_fn":"","text_fn":""},{"id":5961,"surah":87,"no_ayah":13,"tema":"","text_ayah":"\u062b\u064f[g[\u0645\u0651]\u064e \u0644\u064e\u0627 \u064a\u064e\u0645\u064f\u0648\u062a\u064f \u0641\u0650\u064a\u0647\u064e\u0627 \u0648\u064e\u0644\u064e\u0627 \u064a\u064e\u062d\u0652\u064a\u064e\u0649\u0670","text_id":"Selanjutnya, dia tidak mati dan tidak (pula) hidup di sana.","text_en":"In which he will neither die nor live.","transliteration":"Summa laa yamootu feehaa wa laa yahyaa","no_fn":"","text_fn":""},{"id":5962,"surah":87,"no_ayah":14,"tema":"","text_ayah":"\u0642\u064e[q:298[\u062f\u0652] \u0623\u064e\u0641\u0652\u0644\u064e\u062d\u064e \u0645\u064e[f:8555[\u0646 \u062a]\u064e\u0632\u064e\u0643\u0651\u064e\u0649\u0670","text_id":"Sungguh, beruntung orang yang menyucikan diri (dari kekafiran)","text_en":"Surely he will succeed who grows in goodness,","transliteration":"Qad aflaha man tazakkaa","no_fn":"","text_fn":""},{"id":5963,"surah":87,"no_ayah":15,"tema":"","text_ayah":"\u0648\u064e\u0630\u064e\u0643\u064e\u0631\u064e [h:14448[\u0671]\u0633\u0652\u0645\u064e \u0631\u064e\u0628\u0651\u0650\u0647[n[\u0650\u06e6] \u0641\u064e\u0635\u064e\u0644\u0651\u064e\u0649\u0670","text_id":"dan mengingat nama Tuhannya, lalu dia salat.","text_en":"And recites the name of his Lord and serves with devotion.","transliteration":"Wa zakaras ma Rabbihee fasallaa","no_fn":"","text_fn":""},{"id":5964,"surah":87,"no_ayah":16,"tema":"","text_ayah":"\u0628\u064e\u0644\u0652 \u062a\u064f\u0624\u0652\u062b\u0650\u0631\u064f\u0648\u0646\u064e [h:14449[\u0671]\u0644\u0652\u062d\u064e\u064a\u064e[s[\u0648][n[\u0672]\u0629\u064e [h:446[\u0671][l[\u0644]\u062f\u0651\u064f\u0646\u0652\u064a\u064e\u0627","text_id":"Adapun kamu (orang-orang kafir) mengutamakan kehidupan dunia,","text_en":"But no, you prefer the life of the world,","transliteration":"Bal tu'siroonal hayaatad dunyaa","no_fn":"","text_fn":""},{"id":5965,"surah":87,"no_ayah":17,"tema":"","text_ayah":"\u0648\u064e[h:9999[\u0671]\u0644\u0652\u0623\u064e\u062e\u0650\u0631\u064e\u0629\u064f \u062e\u064e\u064a\u0652[a:8546[\u0631\u064c \u0648]\u064e\u0623\u064e[q:8540[\u0628\u0652]\u0642\u064e\u0649\u0670\u0653","text_id":"padahal kehidupan akhirat itu lebih baik dan lebih kekal.","text_en":"Though the life to come is better and abiding.","transliteration":"Wal Aakhiratu khairunw wa abqaa","no_fn":"","text_fn":""},{"id":5966,"surah":87,"no_ayah":18,"tema":"","text_ayah":"\u0625\u0650[g[\u0646\u0651]\u064e \u0647\u064e[n[\u0640\u0670]\u0630\u064e\u0627 \u0644\u064e\u0641\u0650\u0649 [h:14450[\u0671][l[\u0644]\u0635\u0651\u064f\u062d\u064f\u0641\u0650 [h:8657[\u0671]\u0644\u0652\u0623\u064f\u0648\u0644\u064e\u0649\u0670","text_id":"Sesungguhnya (penjelasan) ini terdapat dalam suhuf (lembaran-lembaran) yang terdahulu,","text_en":"This is surely in the earlier Books,","transliteration":"Inna haazaa lafis suhu fil oolaa","no_fn":"","text_fn":""},{"id":5967,"surah":87,"no_ayah":19,"tema":"","text_ayah":"\u0635\u064f\u062d\u064f\u0641\u0650 \u0625\u0650[q:1860[\u0628\u0652]\u0631[n[\u064e\u0672]\u0647\u0650\u064a\u0645\u064e \u0648\u064e\u0645\u064f\u0648\u0633\u064e\u0649\u0670","text_id":"(yaitu) suhuf (yang diturunkan kepada) Ibrahim dan Musa.","text_en":"The Books of Abraham and Moses.","transliteration":"Suhufi Ibraaheema wa Moosaa","no_fn":"","text_fn":""}]