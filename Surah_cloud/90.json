[{"id":6024,"surah":90,"no_ayah":1,"tema":"","text_ayah":"\u0644[o[\u064e\u0627\u0653] \u0623\u064f[q:13287[\u0642\u0652]\u0633\u0650\u0645\u064f \u0628\u0650\u0647\u064e[n[\u0640\u0670]\u0630\u064e\u0627 [h:14500[\u0671]\u0644\u0652\u0628\u064e\u0644\u064e[q[\u062f]\u0650","text_id":"Aku bersumpah demi negeri ini (Makkah),","text_en":"I CALL THIS earth to witness --","transliteration":"Laaa uqsimu bihaazal balad","no_fn":"","text_fn":""},{"id":6025,"surah":90,"no_ayah":2,"tema":"","text_ayah":"\u0648\u064e\u0623\u064e[f:3893[\u0646\u062a]\u064e \u062d\u0650\u0644[i:14501[\u0651\u064f\u06e2 \u0628]\u0650\u0647\u064e[n[\u0640\u0670]\u0630\u064e\u0627 [h:14500[\u0671]\u0644\u0652\u0628\u064e\u0644\u064e[q[\u062f]\u0650","text_id":"sedangkan engkau (Nabi Muhammad) bertempat tinggal di negeri (Makkah) ini.","text_en":"And you are free to live upon it, --","transliteration":"Wa anta hillum bihaazal balad","no_fn":"","text_fn":""},{"id":6026,"surah":90,"no_ayah":3,"tema":"","text_ayah":"\u0648\u064e\u0648\u064e\u0627\u0644\u0650[a:14502[\u062f\u064d \u0648]\u064e\u0645\u064e\u0627 \u0648\u064e\u0644\u064e[q[\u062f]\u064e","text_id":"(Aku juga bersumpah) demi bapak dan anaknya,","text_en":"And the parent and the offspring,","transliteration":"Wa waalidinw wa maa walad","no_fn":"","text_fn":""},{"id":6027,"surah":90,"no_ayah":4,"tema":"","text_ayah":"\u0644\u064e\u0642\u064e[q:2389[\u062f\u0652] \u062e\u064e\u0644\u064e[q:5159[\u0642\u0652]\u0646\u064e\u0627 [h:7228[\u0671]\u0644\u0652\u0625\u0650[f:5969[\u0646\u0633]\u064e[n[\u0640\u0670]\u0646\u064e \u0641\u0650\u064A \u0643\u064e\u0628\u064e[q[\u062f]\u064d","text_id":"sungguh, Kami benar-benar telah menciptakan manusia dalam keadaan susah payah.","text_en":"That We created man in toil and trouble.","transliteration":"Laqad khalaqnal insaana fee kabad","no_fn":"","text_fn":""},{"id":6028,"surah":90,"no_ayah":5,"tema":"","text_ayah":"\u0623\u064e\u064a\u064e\u062d\u0652\u0633\u064e\u0628\u064f \u0623[u:8842[\u064e\u0646 \u0644]\u0651[a:14503[\u064e\u0646 \u064a]\u064e[q:14504[\u0642\u0652]\u062f\u0650\u0631\u064e \u0639\u064e\u0644\u064e\u064a\u0652\u0647\u0650 \u0623\u064e\u062d\u064e[q[\u062f]\u064c","text_id":"Apakah dia (manusia) itu mengira bahwa tidak ada seorang pun yang berkuasa atasnya?","text_en":"Does he think that no one has power over him?","transliteration":"Ayahsabu al-lai yaqdira 'alaihi ahad","no_fn":"","text_fn":""},{"id":6029,"surah":90,"no_ayah":6,"tema":"","text_ayah":"\u064a\u064e\u0642\u064f\u0648\u0644\u064f \u0623\u064e\u0647\u0652\u0644\u064e\u0643\u0652\u062a\u064f \u0645\u064e\u0627\u0644[u:14505[\u0627\u064b \u0644]\u0651\u064f\u0628\u064e\u062f\u064b\u0627","text_id":"Dia mengatakan, “Aku telah menghabiskan harta yang banyak.”","text_en":"He says: \"I have wasted a great deal of wealth.\"","transliteration":"Yaqoolu ahlaktu maalal lubadaa","no_fn":"","text_fn":""},{"id":6030,"surah":90,"no_ayah":7,"tema":"","text_ayah":"\u0623\u064e\u064a\u064e\u062d\u0652\u0633\u064e\u0628\u064f \u0623[u:4423[\u064e\u0646 \u0644]\u0651\u064e\u0645\u0652 \u064a\u064e\u0631\u064e\u0647\u064f[o[\u06e5\u0653] \u0623\u064e\u062d\u064e[q[\u062f]\u064c","text_id":"Apakah dia mengira bahwa tidak ada seorang pun yang melihatnya?","text_en":"Does he think that no one sees him?","transliteration":"Ayahsabu al lam yarahooo ahad","no_fn":"","text_fn":""},{"id":6031,"surah":90,"no_ayah":8,"tema":"","text_ayah":"\u0623\u064e\u0644\u064e\u0645\u0652 \u0646\u064e[q:8219[\u062c\u0652]\u0639\u064e\u0644 \u0644\u0651\u064e\u0647\u064f[n[\u06e5] \u0639\u064e\u064a\u0652\u0646\u064e[p[\u064a\u0652]\u0646\u0650","text_id":"Bukankah Kami telah menjadikan untuknya sepasang mata,","text_en":"Did We not give him two eyes,","transliteration":"Alam naj'al lahoo 'aynayn","no_fn":"","text_fn":""},{"id":6032,"surah":90,"no_ayah":9,"tema":"","text_ayah":"\u0648\u064e\u0644\u0650\u0633\u064e\u0627[a:14506[\u0646\u064b\u0627 \u0648]\u064e\u0634\u064e\u0641\u064e\u062a\u064e[p[\u064a\u0652]\u0646\u0650","text_id":"lidah, dan sepasang bibir,","text_en":"One tongue, and two lips,","transliteration":"Wa lisaananw wa shafatayn","no_fn":"","text_fn":""},{"id":6033,"surah":90,"no_ayah":10,"tema":"","text_ayah":"\u0648\u064e\u0647\u064e\u062f\u064e\u064a\u0652\u0646\u064e[n[\u0640\u0670]\u0647\u064f [h:14507[\u0671][l[\u0644][g[\u0646\u0651]\u064e[q:14508[\u062c\u0652]\u062f\u064e[p[\u064a\u0652]\u0646\u0650","text_id":"serta Kami juga telah menunjukkan kepadanya dua jalan (kebajikan dan kejahatan)?","text_en":"And showed him two highways (of good and evil)?","transliteration":"Wa hadaynaahun najdayn","no_fn":"","text_fn":""},{"id":6034,"surah":90,"no_ayah":11,"tema":"","text_ayah":"\u0641\u064e\u0644\u064e\u0627 [h:14509[\u0671][q:14510[\u0642\u0652]\u062a\u064e\u062d\u064e\u0645\u064e [h:14511[\u0671]\u0644\u0652\u0639\u064e\u0642\u064e\u0628\u064e\u0629\u064e","text_id":"Maka, tidakkah sebaiknya dia menempuh jalan (kebajikan) yang mendaki dan sukar?","text_en":"But he could not scale the steep ascent.","transliteration":"Falaq tahamal-'aqabah","no_fn":"","text_fn":""},{"id":6035,"surah":90,"no_ayah":12,"tema":"","text_ayah":"\u0648\u064e\u0645[o[\u064e\u0627\u0653] \u0623\u064e[q:13858[\u062f\u0652]\u0631\u064e[n[\u066e\u0670]\u0643\u064e \u0645\u064e\u0627 [h:14512[\u0671]\u0644\u0652\u0639\u064e\u0642\u064e\u0628\u064e\u0629\u064f","text_id":"Tahukah kamu apakah jalan yang mendaki dan sukar itu?","text_en":"How will you comprehend what the Steep ascent is? --","transliteration":"Wa maaa adraaka mal'aqabah","no_fn":"","text_fn":""},{"id":6036,"surah":90,"no_ayah":13,"tema":"","text_ayah":"\u0641\u064e\u0643\u0651\u064f \u0631\u064e\u0642\u064e\u0628\u064e\u0629\u064d","text_id":"(Itulah upaya) melepaskan perbudakan","text_en":"To free a neck (from the burden of debt or slavery),","transliteration":"Fakku raqabah","no_fn":"","text_fn":""},{"id":6037,"surah":90,"no_ayah":14,"tema":"","text_ayah":"\u0623\u064e\u0648\u0652 \u0625\u0650[q:14513[\u0637\u0652]\u0639\u064e[n[\u0640\u0670][f:14514[\u0645\u064c \u0641]\u0650\u064A \u064a\u064e\u0648\u0652[f:14515[\u0645\u064d \u0630]\u0650\u064A \u0645\u064e\u0633\u0652\u063a\u064e\u0628\u064e\u0629\u064d","text_id":"atau memberi makan pada hari terjadi kelaparan","text_en":"Or to feed in times of famine","transliteration":"Aw it'aamun fee yawmin zee masghabah","no_fn":"","text_fn":""},{"id":6038,"surah":90,"no_ayah":15,"tema":"","text_ayah":"\u064a\u064e\u062a\u0650\u064a[f:14516[\u0645\u064b\u0627 \u0630]\u064e\u0627 \u0645\u064e[q:14517[\u0642\u0652]\u0631\u064e\u0628\u064e\u0629\u064d","text_id":"(kepada) anak yatim yang memiliki hubungan kekerabatan","text_en":"The orphan near in relationship,","transliteration":"Yateeman zaa maqrabah","no_fn":"","text_fn":""},{"id":6039,"surah":90,"no_ayah":16,"tema":"","text_ayah":"\u0623\u064e\u0648\u0652 \u0645\u0650\u0633\u0652\u0643\u0650\u064a[f:14518[\u0646\u064b\u0627 \u0630]\u064e\u0627 \u0645\u064e\u062a\u0652\u0631\u064e\u0628\u064e\u0629\u064d","text_id":"atau orang miskin yang sangat membutuhkan.","text_en":"Or the poor in distress;","transliteration":"Aw miskeenan zaa matrabah","no_fn":"","text_fn":""},{"id":6040,"surah":90,"no_ayah":17,"tema":"","text_ayah":"\u062b\u064f[g[\u0645\u0651]\u064e \u0643\u064e\u0627\u0646\u064e \u0645\u0650\u0646\u064e [h:523[\u0671]\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648[s[\u0627\u0652] \u0648\u064e\u062a\u064e\u0648\u064e\u0627\u0635\u064e\u0648\u0652[s[\u0627\u0652] \u0628\u0650[h:223[\u0671][l[\u0644]\u0635\u0651\u064e[q:223[\u0628\u0652]\u0631\u0650 \u0648\u064e\u062a\u064e\u0648\u064e\u0627\u0635\u064e\u0648\u0652[s[\u0627\u0652] \u0628\u0650[h:14519[\u0671]\u0644\u0652\u0645\u064e\u0631\u0652\u062d\u064e\u0645\u064e\u0629\u0650","text_id":"Kemudian, dia juga termasuk orang-orang yang beriman dan saling berpesan untuk bersabar serta saling berpesan untuk berkasih sayang.","text_en":"And to be of those who believe, and urge upon one another to persevere, and urge upon each other to be kind.","transliteration":"Summa kaana minal lazeena aamanoo wa tawaasaw bissabri wa tawaasaw bilmarhamah","no_fn":"","text_fn":""},{"id":6041,"surah":90,"no_ayah":18,"tema":"","text_ayah":"\u0623\u064f[s[\u0648\u0652]\u0644\u064e[o[\u0640\u0670\u0653]\u0626\u0650\u0643\u064e \u0623\u064e\u0635\u0652\u062d\u064e[n[\u0640\u0670]\u0628\u064f [h:13209[\u0671]\u0644\u0652\u0645\u064e\u064a\u0652\u0645\u064e\u0646\u064e\u0629\u0650","text_id":"Mereka itulah golongan kanan. ","text_en":"They are the people of the right hand (and will succeed).","transliteration":"Ulaaa'ika As-haabul maimanah","no_fn":"","text_fn":""},{"id":6042,"surah":90,"no_ayah":19,"tema":"","text_ayah":"\u0648\u064e[h:9999[\u0671]\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0643\u064e\u0641\u064e\u0631\u064f\u0648[s[\u0627\u0652] \u0628\u0650\u0640\u0654\u064e\u0640\u0627\u064a\u064e[n[\u0640\u0670]\u062a\u0650\u0646\u064e\u0627 \u0647\u064f\u0645\u0652 \u0623\u064e\u0635\u0652\u062d\u064e[n[\u0640\u0670]\u0628\u064f [h:13211[\u0671]\u0644\u0652\u0645\u064e\u0634\u0652\u0640\u0640\u0654\u064e\u0645\u064e\u0629\u0650","text_id":"Adapun orang-orang yang kufur pada ayat-ayat Kami, merekalah golongan kiri.","text_en":"But those who deny Our revelations are the people of the left hand:","transliteration":"Wallazeena kafaroo bi aayaatinaa hum as-haabul Mash'amah","no_fn":"","text_fn":""},{"id":6043,"surah":90,"no_ayah":20,"tema":"","text_ayah":"\u0639\u064e\u0644\u064e\u064a\u0652\u0647\u0650\u0645\u0652 \u0646\u064e\u0627[a:14520[\u0631\u064c \u0645]\u0651\u064f\u0624\u0652\u0635\u064e\u062f\u064e\u0629\u064f\u06e2","text_id":"Mereka berada dalam neraka yang ditutup rapat.","text_en":"The Fire will vault them over.","transliteration":"Alaihim naarum mu'sadah","no_fn":"","text_fn":""}]