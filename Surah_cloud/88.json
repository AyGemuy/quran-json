[{"id":5968,"surah":88,"no_ayah":1,"tema":"","text_ayah":"\u0647\u064e\u0644\u0652 \u0623\u064e\u062a\u064e[n[\u0640\u0670]\u0643\u064e \u062d\u064e\u062f\u0650\u064a\u062b\u064f [h:14451[\u0671]\u0644\u0652\u063a\u064e[n[\u0640\u0670]\u0634\u0650\u064a\u064e\u0629\u0650","text_id":"Sudahkah sampai kepadamu berita tentang al-GƒÅsyiyah (hari Kiamat yang menutupi kesadaran manusia dengan kedahsyatannya)?","text_en":"HAS NEWS OF the Overpowering Event reached you?","transliteration":"Hal ataaka hadeesul ghaashiyah","no_fn":"","text_fn":""},{"id":5969,"surah":88,"no_ayah":2,"tema":"","text_ayah":"\u0648\u064f\u062c\u064f\u0648[a:14135[\u0647\u064c \u064a]\u064e\u0648\u0652\u0645\u064e\u0626\u0650\u0630\u064d \u062e\u064e[n[\u0640\u0670]\u0634\u0650\u0639\u064e\u0629\u064c","text_id":"Pada hari itu banyak wajah yang tertunduk hina","text_en":"Many faces will be contrite on that day,","transliteration":"Wujoohuny yawma 'izin khaashi'ah","no_fn":"","text_fn":""},{"id":5970,"surah":88,"no_ayah":3,"tema":"","text_ayah":"\u0639\u064e\u0627\u0645\u0650\u0644\u064e[a:14452[\u0629\u064c \u0646]\u0651\u064e\u0627\u0635\u0650\u0628\u064e\u0629\u064c","text_id":"(karena) berusaha keras (menghindari azab neraka) lagi kepayahan (karena dibelenggu).","text_en":"Labouring, wearied out,","transliteration":"'Aamilatun naasibah","no_fn":"","text_fn":""},{"id":5971,"surah":88,"no_ayah":4,"tema":"","text_ayah":"\u062a\u064e\u0635\u0652\u0644\u064e\u064A\u0670 \u0646\u064e\u0627\u0631\u064b\u0627 \u062d\u064e\u0627\u0645\u0650\u064a\u064e\u0629\u064b","text_id":"Mereka memasuki api (neraka) yang sangat panas.","text_en":"Burning in the scorching fire,","transliteration":"Taslaa naaran haamiyah","no_fn":"","text_fn":""},{"id":5972,"surah":88,"no_ayah":5,"tema":"","text_ayah":"\u062a\u064f\u0633\u0652\u0642\u064e\u064A\u0670 \u0645\u0650\u0646\u0652 \u0639\u064e\u064a\u0652\u0646\u064d \u0621\u064e\u0627\u0646\u0650\u064a\u064e\u0629\u064d","text_id":"(Mereka) diberi minum dari sumber mata air yang sangat panas.","text_en":"Given water from the boiling spring to drink.","transliteration":"Tusqaa min 'aynin aaniyah","no_fn":"","text_fn":""},{"id":5973,"surah":88,"no_ayah":6,"tema":"","text_ayah":"\u0644\u0651\u064e\u064a\u0652\u0633\u064e \u0644\u064e\u0647\u064f\u0645\u0652 \u0637\u064e\u0639\u064e\u0627\u0645\u064c \u0625\u0650\u0644\u0651\u064e\u0627 \u0645\u0650[f:14453[\u0646 \u0636]\u064e\u0631[p[\u0650\u064a]\u0639\u064d","text_id":"Tidak ada makanan bagi mereka selain dari pohon yang berduri,","text_en":"They will have no food except bitter thorn,","transliteration":"Laisa lahum ta'aamun illaa min daree'","no_fn":"","text_fn":""},{"id":5974,"surah":88,"no_ayah":7,"tema":"","text_ayah":"\u0644\u0651\u064e\u0627 \u064a\u064f\u0633\u0652\u0645\u0650\u0646\u064f \u0648\u064e\u0644\u064e\u0627 \u064a\u064f\u063a\u0652\u0646\u0650\u064A \u0645\u0650[f:14454[\u0646 \u062c][p[\u064f\u0648]\u0639\u064d","text_id":"yang tidak menggemukkan dan tidak pula menghilangkan lapar.","text_en":"Neither nourishing nor banishing hunger.","transliteration":"Laa yusminu wa laa yughnee min joo'","no_fn":"","text_fn":""},{"id":5975,"surah":88,"no_ayah":8,"tema":"","text_ayah":"\u0648\u064f\u062c\u064f\u0648[a:14135[\u0647\u064c \u064a]\u064e\u0648\u0652\u0645\u064e\u0626\u0650[a:14455[\u0630\u064d \u0646]\u0651\u064e\u0627\u0639\u0650\u0645\u064e\u0629\u064c","text_id":"Pada hari itu banyak (pula) wajah yang berseri-seri,","text_en":"Many faces will be joyous on that day,","transliteration":"Wujoohuny yawma 'izin naa'imah","no_fn":"","text_fn":""},{"id":5976,"surah":88,"no_ayah":9,"tema":"","text_ayah":"\u0644\u0651\u0650\u0633\u064e\u0639\u0652\u064a\u0650\u0647\u064e\u0627 \u0631\u064e\u0627\u0636\u0650\u064a\u064e\u0629\u064c","text_id":"merasa puas karena usahanya.","text_en":"Well-pleased with their endeavour,","transliteration":"Lisa'yihaa raadiyah","no_fn":"","text_fn":""},{"id":5977,"surah":88,"no_ayah":10,"tema":"","text_ayah":"\u0641\u0650\u064A \u062c\u064e[g[\u0646\u0651]\u064e\u0629\u064d \u0639\u064e\u0627\u0644\u0650\u064a\u064e\u0629\u064d","text_id":"(Mereka) dalam surga yang tinggi. ","text_en":"In the high empyrean,","transliteration":"Fee jannatin 'aaliyah","no_fn":"","text_fn":""},{"id":5978,"surah":88,"no_ayah":11,"tema":"","text_ayah":"\u0644\u0651\u064e\u0627 \u062a\u064e\u0633\u0652\u0645\u064e\u0639\u064f \u0641\u0650\u064a\u0647\u064e\u0627 \u0644\u064e[n[\u0640\u0670]\u063a\u0650\u064a\u064e\u0629\u064b","text_id":"Di sana kamu tidak mendengar (perkataan) yang tidak berguna.","text_en":"Never hearing idle talk.","transliteration":"Laa tasma'u feehaa laaghiyah","no_fn":"","text_fn":""},{"id":5979,"surah":88,"no_ayah":12,"tema":"","text_ayah":"\u0641\u0650\u064a\u0647\u064e\u0627 \u0639\u064e\u064a\u0652[f:14456[\u0646\u064c \u062c]\u064e\u0627\u0631\u0650\u064a\u064e\u0629\u064c","text_id":"Di sana ada mata air yang mengalir.","text_en":"There is a stream of running water in it;","transliteration":"Feehaa 'aynun jaariyah","no_fn":"","text_fn":""},{"id":5980,"surah":88,"no_ayah":13,"tema":"","text_ayah":"\u0641\u0650\u064a\u0647\u064e\u0627 \u0633\u064f\u0631\u064f[a:14457[\u0631\u064c \u0645]\u0651\u064e\u0631\u0652\u0641\u064f\u0648\u0639\u064e\u0629\u064c","text_id":"Di sana ada (pula) dipan-dipan yang ditinggikan,","text_en":"And within it are couches placed on high,","transliteration":"Feehaa sururum marfoo'ah","no_fn":"","text_fn":""},{"id":5981,"surah":88,"no_ayah":14,"tema":"","text_ayah":"\u0648\u064e\u0623\u064e\u0643\u0652\u0648\u064e\u0627[a:14458[\u0628\u064c \u0645]\u0651\u064e\u0648\u0652\u0636\u064f\u0648\u0639\u064e\u0629\u064c","text_id":"gelas-gelas yang tersedia (di dekatnya),","text_en":"Goblets set,","transliteration":"Wa akwaabum mawdoo 'ah","no_fn":"","text_fn":""},{"id":5982,"surah":88,"no_ayah":15,"tema":"","text_ayah":"\u0648\u064e\u0646\u064e\u0645\u064e\u0627\u0631\u0650\u0642\u064f \u0645\u064e\u0635\u0652\u0641\u064f\u0648\u0641\u064e\u0629\u064c","text_id":"bantal-bantal sandaran yang tersusun,","text_en":"Cushions arranged,","transliteration":"Wa namaariqu masfoofah","no_fn":"","text_fn":""},{"id":5983,"surah":88,"no_ayah":16,"tema":"","text_ayah":"\u0648\u064e\u0632\u064e\u0631\u064e\u0627\u0628\u0650\u064A\u0651\u064f \u0645\u064e[q:14459[\u0628\u0652]\u062b\u064f\u0648\u062b\u064e\u0629\u064c","text_id":"dan permadani-permadani yang terhampar.","text_en":"And rich carpets spread.","transliteration":"Wa zaraabiyyu mabsoosah","no_fn":"","text_fn":""},{"id":5984,"surah":88,"no_ayah":17,"tema":"","text_ayah":"\u0623\u064e\u0641\u064e\u0644\u064e\u0627 \u064a\u064e[f:1141[\u0646\u0638]\u064f\u0631\u064f\u0648\u0646\u064e \u0625\u0650\u0644\u064e\u064A [h:14460[\u0671]\u0644\u0652\u0625\u0650\u0628\u0650\u0644\u0650 \u0643\u064e\u064a\u0652\u0641\u064e \u062e\u064f\u0644\u0650\u0642\u064e\u062a\u0652","text_id":"Tidakkah mereka memperhatikan unta, bagaimana ia diciptakan?","text_en":"Do they not then ponder how the clouds were formed;","transliteration":"Afalaa yanzuroona ilalibili kaifa khuliqat","no_fn":"","text_fn":""},{"id":5985,"surah":88,"no_ayah":18,"tema":"","text_ayah":"\u0648\u064e\u0625\u0650\u0644\u064e\u064A [h:14461[\u0671][l[\u0644]\u0633\u0651\u064e\u0645[o[\u064e\u0627]\u0653\u0621\u0650 \u0643\u064e\u064a\u0652\u0641\u064e \u0631\u064f\u0641\u0650\u0639\u064e\u062a\u0652","text_id":"Bagaimana langit ditinggikan?","text_en":"And the heavens, how it was raised high;","transliteration":"Wa ilas samaaa'i kaifa rufi'at","no_fn":"","text_fn":""},{"id":5986,"surah":88,"no_ayah":19,"tema":"","text_ayah":"\u0648\u064e\u0625\u0650\u0644\u064e\u064A [h:14462[\u0671]\u0644\u0652\u062c\u0650\u0628\u064e\u0627\u0644\u0650 \u0643\u064e\u064a\u0652\u0641\u064e \u0646\u064f\u0635\u0650\u0628\u064e\u062a\u0652","text_id":"Bagaimana gunung-gunung ditegakkan?","text_en":"And the mountains, how they were fixed;","transliteration":"Wa ilal jibaali kaifa nusibat","no_fn":"","text_fn":""},{"id":5987,"surah":88,"no_ayah":20,"tema":"","text_ayah":"\u0648\u064e\u0625\u0650\u0644\u064e\u064A [h:14463[\u0671]\u0644\u0652\u0623\u064e\u0631\u0652\u0636\u0650 \u0643\u064e\u064a\u0652\u0641\u064e \u0633\u064f\u0637\u0650\u062d\u064e\u062a\u0652","text_id":"Bagaimana pula bumi dihamparkan?","text_en":"And the earth, how it was spread out?","transliteration":"Wa ilal ardi kaifa sutihat","no_fn":"","text_fn":""},{"id":5988,"surah":88,"no_ayah":21,"tema":"","text_ayah":"\u0641\u064e\u0630\u064e\u0643\u0651\u0650\u0631\u0652 \u0625\u0650[g[\u0646\u0651]\u064e\u0645[o[\u064e\u0627\u0653] \u0623\u064e[f:169[\u0646\u062a]\u064e \u0645\u064f\u0630\u064e\u0643\u0651\u0650\u0631\u064c","text_id":"Maka, berilah peringatan karena sesungguhnya engkau (Nabi Muhammad) hanyalah pemberi peringatan.","text_en":"Remind them; you are surely a reminder.","transliteration":"Fazakkir innama anta Muzakkir","no_fn":"","text_fn":""},{"id":5989,"surah":88,"no_ayah":22,"tema":"","text_ayah":"\u0644\u0651\u064e\u0633\u0652\u062a\u064e \u0639\u064e\u0644\u064e\u064a\u0652\u0647[c:14464[\u0650\u0645 \u0628]\u0650\u0645\u064f\u0635\u064e\u064a\u0652\u0637\u0650\u0631\u064d","text_id":"Engkau bukanlah orang yang berkuasa atas mereka.","text_en":"You are not a warden over them,","transliteration":"Lasta 'alaihim bimusaitir","no_fn":"","text_fn":""},{"id":5990,"surah":88,"no_ayah":23,"tema":"","text_ayah":"\u0625\u0650\u0644\u0651\u064e\u0627 \u0645\u064e[f:12995[\u0646 \u062a]\u064e\u0648\u064e\u0644\u0651\u064e\u064A\u0670 \u0648\u064e\u0643\u064e\u0641\u064e\u0631\u064e","text_id":"Akan tetapi, orang yang berpaling dan kufur,","text_en":"Other than him who turns his back and denies,","transliteration":"Illaa man tawallaa wa kafar","no_fn":"","text_fn":""},{"id":5991,"surah":88,"no_ayah":24,"tema":"","text_ayah":"\u0641\u064e\u064a\u064f\u0639\u064e\u0630\u0651\u0650\u0628\u064f\u0647\u064f [h:14465[\u0671]\u0644\u0644\u0651\u064e\u0647\u064f [h:14466[\u0671]\u0644\u0652\u0639\u064e\u0630\u064e\u0627\u0628\u064e [h:14467[\u0671]\u0644\u0652\u0623\u064e\u0643\u0652\u0628\u064e\u0631\u064e","text_id":"Allah akan mengazabnya dengan azab yang paling besar.","text_en":"In which case he will be punished by God with the severest punishment.","transliteration":"Fa yu'azzibuhul laahul 'azaabal akbar","no_fn":"","text_fn":""},{"id":5992,"surah":88,"no_ayah":25,"tema":"","text_ayah":"\u0625\u0650[g[\u0646\u0651]\u064e \u0625\u0650\u0644\u064e\u064a\u0652\u0646[o[\u064e\u0627\u0653] \u0625\u0650\u064a\u064e\u0627\u0628\u064e\u0647\u064f\u0645\u0652","text_id":"Sesungguhnya kepada Kamilah mereka kembali.","text_en":"To Us is surely their returning;","transliteration":"Innaa ilainaaa iyaabahum","no_fn":"","text_fn":""},{"id":5993,"surah":88,"no_ayah":26,"tema":"","text_ayah":"\u062b\u064f[g[\u0645\u0651]\u064e \u0625\u0650[g[\u0646\u0651]\u064e \u0639\u064e\u0644\u064e\u064a\u0652\u0646\u064e\u0627 \u062d\u0650\u0633\u064e\u0627\u0628\u064e\u0647\u064f\u0645","text_id":"Kemudian, sesungguhnya Kamilah yang berhak melakukan hisab (perhitungan) atas mereka.","text_en":"Ours is surely then to reckon with them.","transliteration":"Summa inna 'alainaa hisaabahum","no_fn":"","text_fn":""}]